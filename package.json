{
  "name": "divination",
  "version": "0.0.0",
  "author": "SlashNephy <spica@starry.blue>",
  "repository": "https://github.com/SlashNephy/Divination",
  "license": "MIT",
  "scripts": {
    "build": "yarn workspaces foreach -Api run build",
    "format": "concurrently -m 1 -n format: 'yarn:format:*'",
    "format:eslint": "yarn lint:eslint --fix",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "concurrently -n lint: 'yarn:lint:*'",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check ."
  },
  "devDependencies": {
    "@slashnephy/eslint-config": "2.3.1",
    "@slashnephy/prettier-config": "1.0.73",
    "concurrently": "8.2.2",
    "eslint": "8.56.0",
    "prettier": "3.1.1"
  },
  "packageManager": "yarn@4.0.2",
  "engines": {
    "node": ">=20"
  },
  "eslintConfig": {
    "extends": [
      "@slashnephy/eslint-config"
    ],
    "overrides": [
      {
        "files": "functions/**/*.ts",
        "parserOptions": {
          "project": "./functions/tsconfig.json"
        }
      },
      {
        "files": "packages/PluginRepository/src/**/*.{ts,tsx}",
        "parserOptions": {
          "project": "./packages/PluginRepository/tsconfig.json"
        }
      },
      {
        "files": "packages/PluginRepository/vite.config.ts",
        "parserOptions": {
          "project": "./packages/PluginRepository/tsconfig.node.json"
        }
      }
    ],
    "ignorePatterns": [
      "packages/**/obj/*.json"
    ]
  },
  "workspaces": [
    "functions",
    "packages/*"
  ]
}
