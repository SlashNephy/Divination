{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>SlashNephy/renovate-config'
  ],
  ignorePaths: [
    // abandoned projects
    'ChatFilter/**',
    'Debugger/**',
    'DiscordIntegration/**',
    'DiscordIntegration.IpcModel/**',
    'InstanceIDViewer/**',
    'PerfectComplex/**',
    'PowerUtils/**',
    'SseClient/**',
    'TwitterIntegration/**',
    'Voiceroid2Talker/**',
  ],
  customManagers: [
    // .NET TargetFramework
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^Directory\\.Build\\.props$/'
      ],
      matchStrings: [
        '<TargetFramework>net(?<currentValue>\\d+\\.\\d+)-windows</TargetFramework>'
      ],
      depNameTemplate: 'dotnet/core',
      datasourceTemplate: 'github-tags',
      extractVersionTemplate: '^v(?<version>\\d+\\.\\d+)',
    },
    // Dalamud API Level
    {
      customType: 'regex',
      managerFilePatterns: [
        '/\\.json$/'
      ],
      matchStrings: [
        '"(?:Testing)?DalamudApiLevel"\\s*:\\s*(?<currentValue>\\d+)'
      ],
      depNameTemplate: 'goatcorp/Dalamud',
      datasourceTemplate: 'github-tags',
      extractVersionTemplate: '^(?<version>\\d+)',
    },
  ],
}
